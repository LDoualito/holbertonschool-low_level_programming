#include "main.h"
#include <stdio.h>
#include <stdlib.h>
/**
 *
 *
 *
 */
void print_diagonal(int n)
{
	int i,j;
	char x = 92;

	/* in case n <= 0
        if (n <= 0)
	{
		_putchar('\n');
		return;
			}
	for (i = 0; i < n; i++)
	{
		for (j = 0; j < i; j++)
			_putchar(' ');
		_putchar(x);
		_putchar('\n');
	}
}
